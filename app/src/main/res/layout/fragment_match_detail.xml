<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16sp"
        android:text="These are your learning buddies" />

    <TableLayout
        android:id="@+id/tl_matches_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners_with_borders_event_organizer"
        android:stretchColumns="0,1">
        <TableRow
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_match_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dog"
                app:civ_border_width="0dp"
                app:civ_border_color="#FFFFFFFF"
                android:layout_gravity="start"/>

            <TableLayout
                android:layout_marginStart="-40dp">
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="start"
                        android:text="Dugg Bounty" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_1_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:text="Professor at K-Nine Night School" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tl_matches_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners_with_borders_event_organizer"
        android:stretchColumns="0,1">
        <TableRow
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_match_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dog"
                app:civ_border_width="0dp"
                app:civ_border_color="#FFFFFFFF"
                android:layout_gravity="start"/>

            <TableLayout
                android:layout_marginStart="-40dp">
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="start"
                        android:text="Dugg Bounty" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:text="Professor at K-Nine Night School" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tl_matches_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_corners_with_borders_event_organizer"
        android:stretchColumns="0,1">
        <TableRow
            android:padding="5dp"
            android:layout_marginTop="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/iv_match_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/dog"
                app:civ_border_width="0dp"
                app:civ_border_color="#FFFFFFFF"
                android:layout_gravity="start"/>

            <TableLayout
                android:layout_marginStart="-40dp">
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_gravity="start"
                        android:text="Dugg Bounty" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@+id/tv_match_3_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:textStyle="normal"
                        android:textSize="12sp"
                        android:layout_gravity="start"
                        android:text="Professor at K-Nine Night School" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:text="Our system has automatically paired you with these learners. You are all part of a small group, where you can share ideas and ask questions."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:text="Next"/>

    </RelativeLayout>

</LinearLayout>