<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/round_corners">

    <View
        android:id="@+id/v_vertical_bar"
        android:layout_width="2dp"
        android:layout_height="96dp"
        android:background="@color/aqua"
        android:layout_marginStart="14dp"/>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:padding="5dp"
        android:background="@drawable/round_corners_with_border_event_item"
        android:src="@drawable/ic_trophy"/>

    <TextView
        android:id="@+id/tv_event_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/v_vertical_bar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Event title" />

    <TextView
        android:id="@+id/tv_event_summary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/tv_event_title"
        android:layout_marginStart="50dp"
        android:layout_marginRight="10dp"
        android:textSize="12sp"
        android:textColor="@color/dark_grey"
        android:text="@string/lorem_ipsum_short" />

</RelativeLayout>