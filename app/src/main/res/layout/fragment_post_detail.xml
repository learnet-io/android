<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_white"
    android:layout_marginBottom="50dp"
    tools:context=".ui.posts.PostDetailFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_post_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/post_reply"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_post_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/edit"
        android:src="@drawable/ic_pencil"
        app:tint="@android:color/white"
        app:backgroundTint="@color/aqua"
        app:elevation="5dp"
        app:fabSize="mini" />
</FrameLayout>