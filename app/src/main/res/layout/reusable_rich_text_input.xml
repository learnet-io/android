<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="@dimen/bottom_nav_height"
            />
    </ScrollView>

    <HorizontalScrollView
        android:id="@+id/hsv_rich_text_tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:background="@color/rich_text_tools">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/action_bold"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_format_bold" />

            <ImageButton
                android:id="@+id/action_italic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_format_italic" />

            <ImageButton
                android:id="@+id/action_strikethrough"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_format_strikethrough" />

            <ImageButton
                android:id="@+id/action_insert_bullets"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_format_bullets" />

            <ImageButton
                android:id="@+id/action_insert_numbers"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_format_numbers" />

            <ImageButton
                android:id="@+id/action_outdent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_outdent" />

            <ImageButton
                android:id="@+id/action_indent"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_indent" />

            <ImageButton
                android:id="@+id/action_insert_link"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ic_format_insert_link" />
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>