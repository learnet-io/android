<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/i_cancel_submit_top_bar"
        layout="@layout/reusable_submit_or_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/et_post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_below="@+id/i_cancel_submit_top_bar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Post Title"/>

    <include
        android:id="@+id/i_rich_text_editor"
        layout="@layout/reusable_rich_text_input"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_post_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>